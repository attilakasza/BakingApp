<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_widget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/widget_item_layout_margin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_item_text_quantity_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/widget_item_text_margin"
        android:textColor="@android:color/white"
        android:textSize="@dimen/widget_item_text_ingredient_size"
        android:textStyle="normal" />

</LinearLayout>