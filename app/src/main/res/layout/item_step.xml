<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/step_card_bottom_margin"
    android:layout_marginEnd="@dimen/step_card_end_margin"
    android:layout_marginStart="@dimen/step_card_start_margin"
    android:layout_marginTop="@dimen/recipe_card_top_margin"
    android:backgroundTint="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/step_card_layout_padding">

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/step_card_text_padding"
            android:textColor="@android:color/white"
            android:textSize="@dimen/step_card_text_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>