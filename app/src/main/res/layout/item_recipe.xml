<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ir_card_view_height"
    android:layout_marginBottom="@dimen/ir_card_view_margin_bottom"
    android:layout_marginEnd="@dimen/ir_card_view_margin_end"
    android:layout_marginStart="@dimen/ir_card_view_margin_start"
    android:layout_marginTop="@dimen/ir_card_view_margin_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_recipe"
            android:layout_width="@dimen/ir_image_view_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/ir_image_view_margin_start"
            android:contentDescription="@string/cake"
            android:padding="@dimen/ir_image_view_padding"
            android:tint="@color/background" />

        <TextView
            android:id="@+id/tv_recipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/ir_text_view_margin_start"
            android:textColor="@color/background"
            android:textSize="@dimen/recipe_card_text_size" />

    </LinearLayout>

</android.support.v7.widget.CardView>